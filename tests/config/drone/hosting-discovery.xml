<wopi-discovery>
    <net-zone name="external-http">
        <app favIconUrl="https://fakeoffice.owncloud.test/favicon.ico" name="FakeOffice">
            <action default="true" ext="wopitest" name="view" urlsrc="https://fakeoffice.owncloud.test/not/relevant?"/>
