    'kind': 'pipeline',
    'type': 'docker',
    'name': name,
    'platform': {
      'os': 'linux',
      'arch': 'amd64',
    },
    'steps': [
      {
        'name': 'generate',
        'image': 'webhippie/golang:1.12',
        'pull': 'always',
        'commands': [
          'make generate'
        ],
        'volumes': [
          {
            'name': 'gopath',
            'path': '/srv/app'
          }
        ]
      },
      {
        'name': 'build',
        'image': 'webhippie/golang:1.12',
        'pull': 'always',
        'commands': [
          'make release-%s' % name
