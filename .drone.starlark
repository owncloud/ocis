def main(ctx):
  before = testing()

  stages = [
    docker('amd64'),
    docker('arm64'),
    docker('arm'),
    binary('linux'),
    binary('darwin'),
    binary('windows'),
  ]

  after = manifest()

  for b in before:
    for s in stages:
      s['depends_on'].append(b['name'])

  for s in stages:
    for a in after:
      a['depends_on'].append(s['name'])

  return before + stages + after

